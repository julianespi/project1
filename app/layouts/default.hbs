<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your App</title>
  <link rel="stylesheet" type="text/css" href="/assets/css/nav.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
</head>
  <body>
    <div>
    {{#if currentUser}}
          <div class = "logout"><a class="nav__button" href="/user/logout">Logout</a></div>
          <div class = "username">{{currentUser.details.username}}</div>
          
        
    {{else}}
      <div class = "signup"><a class="nav__button" href="/user/signup">Sign up</a></div>
      &nbsp;
      <div class = "signin"><a class="nav__button" href="/user/login">Log in</a></div>
      
    
    {{/if}}
    {{!-- Show errors --}}
    {{#if flashErrors }}
      {{#each flashErrors }}
        <div>{{ this }}</div>
      {{/each}}
    {{/if}}
    {{!-- Show success messages --}}
    {{#if flashSuccesses }}
      {{#each flashSuccesses }}
        <div>{{ this }}</div>
      {{/each}}
    {{/if}}
    {{> yield }}
    {{#if isPageAuthor}}
      {{!-- Prevent loading the Remake framework if the page isn't editable --}}
      <script src="/assets/js/vendor/Sortable.min.js"></script>
      <script src="/assets/js/vendor/crostini.min.js"></script>
      <script src="/remake/js/remake.min.js"></script>
      <script src="/assets/js/remake-init.js"></script>
    {{/if}}
    <script src="/assets/js/main.js"></script>
    </div>
  </body>
</html>